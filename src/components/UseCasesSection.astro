---
import { getUseCases } from '../content/helpers';
import { type Language } from '../i18n/ui';

interface UseCaseItem {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  app: 'bingo' | 'cards' | 'print';
  lang: Language;
  gradientFrom: string;
  gradientTo: string;
  textColor?: string;
}

const { app, lang, gradientFrom, gradientTo, textColor = '#f3e8ff' } = Astro.props;
const data = await getUseCases(app, lang);

if (!data) {
  throw new Error(`Use cases data not found for app: ${app}, lang: ${lang}`);
}

const { title, subtitle, items } = data;
---

<section id="usecases" class="py-20" style={`background: linear-gradient(to right, ${gradientFrom}, ${gradientTo})`}>
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">{title}</h2>
      <p class="text-xl max-w-3xl mx-auto" style={`color: ${textColor}`}>{subtitle}</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {items.map((useCase: UseCaseItem) => (
        <div class="bg-white/10 rounded-2xl p-8 hover:bg-white/15 transition-colors">
          <div class="w-14 h-14 bg-white/15 rounded-xl flex items-center justify-center mb-6">
            <img
              src={`/icons/usecases/${useCase.icon}.svg`}
              alt=""
              class="w-7 h-7"
            />
          </div>
          <h3 class="text-xl font-bold text-white mb-3">{useCase.title}</h3>
          <p class="leading-[26px]" style={`color: ${textColor}`}>{useCase.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
