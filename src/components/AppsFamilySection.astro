---
import { useTranslations, toLanguage, getLocalizedPath } from '../i18n/utils';
import type { Language } from '../i18n/ui';

interface Props {
  lang?: Language;
}

const { lang = toLanguage(Astro.currentLocale) } = Astro.props;
const t = useTranslations(lang);

// Landing page links
const bingoLandingLink = getLocalizedPath(lang, '/bingo/');
const cardsLandingLink = getLocalizedPath(lang, '/cards/');
const printLandingLink = getLocalizedPath(lang, '/print/');

// App Store Links
const bingoIosLink = "https://apps.apple.com/app/apple-store/id1505191957?ct=landing";
const bingoAndroidLink = "https://play.google.com/store/apps/details?id=com.wombat.bingoapp";
const cardsIosLink = "https://apps.apple.com/app/id1510582506?ct=landing";
const cardsAndroidLink = "https://play.google.com/store/apps/details?id=com.wombat.bingocards";
// Print app not yet published - uncomment when available
// const printIosLink = "https://apps.apple.com/app/id6740032513?ct=landing";
// const printAndroidLink = "https://play.google.com/store/apps/details?id=com.wombat.bingoprint";
---

<section id="apps" class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-[#101828] mb-4">{t('apps_family_title')}</h2>
            <p class="text-xl text-[#4a5565] max-w-3xl mx-auto">{t('apps_family_subtitle')}</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
            <!-- Bingo!! -->
            <div class="bg-white/40 border border-[#eee] rounded-2xl p-3 flex flex-col items-center">
                <a href={bingoLandingLink} class="block hover:opacity-80 transition-opacity">
                    <img src="/images/bingo-app-screenshot.png" alt="Bingo!!" class="w-52 h-auto mb-6">
                </a>
                <a href={bingoLandingLink} class="hover:text-bingo-purple transition-colors">
                    <h3 class="text-xl font-medium text-[#101828] mb-2">bingo!!</h3>
                </a>
                <p class="text-base text-[#4a5565] text-center leading-6 mb-6 px-3">{t('bingo_app_desc')}</p>
                <div class="flex gap-3 justify-center mb-3">
                    <a href={bingoIosLink} class="flex items-center bg-black text-white px-3 py-2 rounded-xl hover:bg-gray-800 transition-colors">
