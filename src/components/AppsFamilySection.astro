---
import { toLanguage, getLocalizedPath } from '../i18n/utils';
import type { Language } from '../i18n/ui';
import { getAppsFamily, getUi } from '../content/helpers';

interface Props {
  lang?: Language;
}

type AppKey = 'bingo' | 'cards' | 'print';
interface AppItem {
  app: AppKey;
  description: string;
}

const { lang = toLanguage(Astro.currentLocale) } = Astro.props;

// Load content from collections
const appsFamily = await getAppsFamily(lang);
const ui = await getUi(lang);

if (!appsFamily || !ui) {
  throw new Error(`Missing apps family content for ${lang}`);
}

// Landing page links
const bingoLandingLink = getLocalizedPath(lang, '/bingo/');
const cardsLandingLink = getLocalizedPath(lang, '/cards/');
const printLandingLink = getLocalizedPath(lang, '/print/');

// App Store Links
const bingoIosLink = "https://apps.apple.com/app/apple-store/id1505191957?ct=landing";
const bingoAndroidLink = "https://play.google.com/store/apps/details?id=com.wombat.bingoapp";
const cardsIosLink = "https://apps.apple.com/app/id1510582506?ct=landing";
const cardsAndroidLink = "https://play.google.com/store/apps/details?id=com.wombat.bingocards";
// Print app - iOS available, Android coming soon
const printIosLink = "https://apps.apple.com/app/id6757099784?ct=landing";

// Map app to its landing page link and store links
const appLinks = {
  bingo: { landing: bingoLandingLink, ios: bingoIosLink, android: bingoAndroidLink },
  cards: { landing: cardsLandingLink, ios: cardsIosLink, android: cardsAndroidLink },
  print: { landing: printLandingLink, ios: printIosLink, android: null },
};

const appImages = {
  bingo: { src: '/images/bingo-app-screenshot.png', alt: 'Bingo!!' },
  cards: { src: '/images/bingo-cards-app-screenshot.png', alt: 'Bingo Cards!!' },
  print: { src: '/images/bingo-print-app-screenshot.png', alt: 'Bingo Print!!' },
};

const appNames = {
  bingo: 'bingo!!',
  cards: 'bingo!! cards',
  print: 'bingo!! print',
};
---

<section id="apps" class="py-20 bg-white">
    <div class="container mx-auto px-4">
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-bold text-[#101828] mb-4">{appsFamily.title}</h2>
            <p class="text-xl text-[#4a5565] max-w-3xl mx-auto">{appsFamily.subtitle}</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
            {appsFamily.apps.map((appItem: AppItem) => {
                const links = appLinks[appItem.app];
                const image = appImages[appItem.app];
                const name = appNames[appItem.app];

                return (
                    <div class="relative bg-white/40 border border-[#eee] rounded-2xl p-3 flex flex-col items-center hover:border-bingo-purple/30 hover:shadow-lg transition-all group">
                        <a href={links.landing} class="absolute inset-0 z-0 rounded-2xl" aria-label={`Ver mÃ¡s sobre ${name}`}></a>
                        <div class="relative z-[1] group-hover:opacity-80 transition-opacity pointer-events-none">
                            <img src={image.src} alt={image.alt} class="w-52 h-auto mb-6">
                        </div>
                        <div class="relative z-[1] group-hover:text-bingo-purple transition-colors pointer-events-none">
                            <h3 class="text-xl font-medium text-[#101828] mb-2 group-hover:text-bingo-purple">{name}</h3>
                        </div>
                        <p class="relative z-[1] text-base text-[#4a5565] text-center leading-6 mb-6 px-3 pointer-events-none">{appItem.description}</p>
                        <div class="relative z-10 flex gap-3 justify-center mb-3">
                            <a href={links.ios} class="flex items-center bg-black text-white px-3 py-2 rounded-xl hover:bg-gray-800 transition-colors">
                                <svg class="w-6 h-6 mr-2" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                                </svg>
                                <div class="text-left">
                                    <div class="text-[8px] opacity-80">{ui.buttons.downloadOnAppstore}</div>
                                    <div class="text-sm font-semibold -mt-0.5">App Store</div>
                                </div>
                            </a>
                            {links.android ? (
                                <a href={links.android} class="flex items-center bg-black text-white px-3 py-2 rounded-xl hover:bg-gray-800 transition-colors">
                                    <svg class="w-6 h-6 mr-2" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                                    </svg>
                                    <div class="text-left">
                                        <div class="text-[8px] opacity-80">{ui.buttons.getItOnGoogle}</div>
                                        <div class="text-sm font-semibold -mt-0.5">Google Play</div>
                                    </div>
                                </a>
                            ) : (
                                <div class="flex items-center bg-black/50 text-white/70 px-3 py-2 rounded-xl cursor-not-allowed">
                                    <svg class="w-6 h-6 mr-2 opacity-60" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                                    </svg>
                                    <div class="text-left">
                                        <div class="text-[8px] opacity-60">Google Play</div>
                                        <div class="text-sm font-semibold -mt-0.5">{ui.buttons.comingSoon}</div>
                                    </div>
                                </div>
                            )}
                        </div>
                    </div>
                );
            })}
        </div>
    </div>
</section>
