---
import '../styles/global.css';
import { useTranslations, getLocalizedPath, getOgLocale, getAlternateLocales, toLanguage } from '../i18n/utils';
import AppsFamilySection from './AppsFamilySection.astro';
import { languages, defaultLang, type Language } from '../i18n/ui';

interface Props {
  lang?: Language;
}

const { lang = toLanguage(Astro.currentLocale) } = Astro.props;
const t = useTranslations(lang);
const ogLocale = getOgLocale(lang);
const alternateLocales = getAlternateLocales(lang);
const canonicalBase = 'https://wombat-apps.com';
const canonicalPath = lang === 'en' ? '/cards/' : `/${lang}/cards/`;
const canonicalUrl = `${canonicalBase}${canonicalPath}`;
const privacyPath = getLocalizedPath(lang, '/privacy-policy');
const mainLandingPath = getLocalizedPath(lang, '/');
const bingoLandingPath = getLocalizedPath(lang, '/bingo/');
const printLandingPath = getLocalizedPath(lang, '/bingo-print/');

// App Store Links - Bingo Cards!!
const iosAppLink = "https://apps.apple.com/app/id1510582506?ct=cards-landing";
const androidAppLink = "https://play.google.com/store/apps/details?id=com.wombat.bingocards";

// Data arrays
const advantages = [
  { title: t('cards_advantage1_title'), desc: t('cards_advantage1_desc'), icon: '<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><line x1="9" y1="3" x2="9" y2="21"/><line x1="15" y1="3" x2="15" y2="21"/><line x1="3" y1="9" x2="21" y2="9"/><line x1="3" y1="15" x2="21" y2="15"/>' },
  { title: t('cards_advantage2_title'), desc: t('cards_advantage2_desc'), icon: '<rect x="5" y="2" width="14" height="20" rx="2" ry="2"/><line x1="12" y1="18" x2="12" y2="18" stroke-linecap="round"/>' },
  { title: t('cards_advantage3_title'), desc: t('cards_advantage3_desc'), icon: '<circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12" y2="16" stroke-linecap="round"/>' },
  { title: t('cards_advantage4_title'), desc: t('cards_advantage4_desc'), icon: '<circle cx="12" cy="12" r="10"/><path d="M8 14s1.5 2 4 2 4-2 4-2"/><line x1="9" y1="9" x2="9.01" y2="9"/><line x1="15" y1="9" x2="15.01" y2="9"/>' },
  { title: t('cards_advantage5_title'), desc: t('cards_advantage5_desc'), icon: '<polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>' },
  { title: t('cards_advantage6_title'), desc: t('cards_advantage6_desc'), icon: '<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><rect x="7" y="7" width="3" height="3"/><rect x="14" y="7" width="3" height="3"/><rect x="7" y="14" width="3" height="3"/><rect x="14" y="14" width="3" height="3"/>' }
];

const useCases = [
  { title: t('cards_usecase1_title'), desc: t('cards_usecase1_desc'), icon: '<path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>' },
  { title: t('cards_usecase2_title'), desc: t('cards_usecase2_desc'), icon: '<path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>' },
  { title: t('cards_usecase3_title'), desc: t('cards_usecase3_desc'), icon: '<path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>' },
  { title: t('cards_usecase4_title'), desc: t('cards_usecase4_desc'), icon: '<line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>' },
  { title: t('cards_usecase5_title'), desc: t('cards_usecase5_desc'), icon: '<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/>' },
  { title: t('cards_usecase6_title'), desc: t('cards_usecase6_desc'), icon: '<rect x="2" y="7" width="20" height="14" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>' }
];

const faqs = [
  { q: t('cards_faq_q1'), a: t('cards_faq_a1') },
  { q: t('cards_faq_q2'), a: t('cards_faq_a2') },
  { q: t('cards_faq_q3'), a: t('cards_faq_a3') },
  { q: t('cards_faq_q4'), a: t('cards_faq_a4') },
  { q: t('cards_faq_q5'), a: t('cards_faq_a5') },
  { q: t('cards_faq_q6'), a: t('cards_faq_a6') },
  { q: t('cards_faq_q7'), a: t('cards_faq_a7') }
];

// Language selector helper for /cards/ routes
function getLanguageLink(targetLang: Language): string {
  if (targetLang === defaultLang) return '/cards/';
  return `/${targetLang}/cards/`;
}
---

<!DOCTYPE html>
<html lang={lang}>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{t('cards_meta_title')}</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content={t('cards_meta_description')}>
    <meta name="robots" content="index, follow">
    <meta name="author" content="Wombat Apps">
    <meta name="theme-color" content="#417cee">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" sizes="96x96" href="/favicon-96x96.png">
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="canonical" href={canonicalUrl}>

    <!-- Open Graph -->
    <meta property="og:title" content={t('cards_og_title')}>
    <meta property="og:description" content={t('cards_og_description')}>
    <meta property="og:image" content={`${canonicalBase}/images/og-cards.png`}>
    <meta property="og:url" content={canonicalUrl}>
    <meta property="og:type" content="website">
    <meta property="og:site_name" content="Bingo Cards!!">
    <meta property="og:locale" content={ogLocale}>
    {alternateLocales.map((locale) => (
        <meta property="og:locale:alternate" content={locale} />
    ))}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content={t('cards_og_title')}>
    <meta name="twitter:description" content={t('cards_og_description')}>
    <meta name="twitter:image" content={`${canonicalBase}/images/og-cards.png`}>

    <!-- Hreflang -->
    <link rel="alternate" hreflang="en" href={`${canonicalBase}/cards/`}>
    <link rel="alternate" hreflang="es" href={`${canonicalBase}/es/cards/`}>
    <link rel="alternate" hreflang="fr" href={`${canonicalBase}/fr/cards/`}>
    <link rel="alternate" hreflang="pt" href={`${canonicalBase}/pt/cards/`}>
    <link rel="alternate" hreflang="x-default" href={`${canonicalBase}/cards/`}>

    <!-- Performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <!-- Structured Data -->
    <script is:inline type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Wombat Apps",
        "url": canonicalBase,
        "logo": `${canonicalBase}/images/bingo-logo.png`
    })} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Bingo Cards!!",
        "operatingSystem": "iOS, Android",
        "applicationCategory": "GameApplication",
        "offers": { "@type": "Offer", "price": "0", "priceCurrency": "USD" },
        "aggregateRating": { "@type": "AggregateRating", "ratingValue": "4.8", "ratingCount": "10000" }
    })} />
    <script is:inline type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": faqs.map(faq => ({
            "@type": "Question",
            "name": faq.q,
            "acceptedAnswer": { "@type": "Answer", "text": faq.a }
        }))
    })} />
</head>
<body class="bg-white font-sans">
    <!-- Skip Link -->
    <a href="#main" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[100] focus:bg-white focus:text-[#417cee] focus:px-4 focus:py-2 focus:rounded-lg focus:shadow-lg focus:font-semibold">
        {t('skip_to_content')}
    </a>

    <!-- Hero Section -->
    <header class="bg-gradient-to-r from-[#558ffd] to-[#2663db] relative overflow-hidden min-h-[600px] lg:min-h-[678px]">
        <!-- Decorative circles with blur -->
        <div class="absolute inset-0 overflow-hidden">
            <div class="absolute top-[15%] left-[40%] w-36 h-36 bg-[#20dfff] rounded-full opacity-30 blur-[55px]"></div>
            <div class="absolute top-[45%] left-[35%] w-36 h-36 bg-[#a5d5fd] rounded-full opacity-30 blur-[55px]"></div>
            <div class="absolute bottom-[10%] right-[5%] w-36 h-36 bg-[#a5d5fd] rounded-full opacity-30 blur-[55px]"></div>
        </div>

        <div class="container mx-auto px-4 py-12 lg:py-16 relative z-10">
            <div class="flex flex-col lg:flex-row items-center justify-between gap-8 lg:gap-16">
                <!-- Left column - Text content -->
                <div class="lg:w-1/2 text-center lg:text-left">
                    <!-- Logo -->
                    <div class="mb-8">
                        <img src="/images/bingo-cards-logo.png" alt="Bingo Cards!!" class="h-12 lg:h-14 w-auto mx-auto lg:mx-0">
                    </div>

                    <!-- Headline -->
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 leading-tight">
                        {t('cards_headline')}
                    </h1>

                    <!-- Subtitle -->
                    <p class="text-lg md:text-xl text-white/90 mb-6 leading-relaxed">
                        {t('cards_subtitle')}
                    </p>

                    <!-- Download buttons -->
                    <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 mb-6">
                        <a href={iosAppLink} class="flex items-center bg-black text-white px-4 py-3 rounded-xl hover:bg-gray-800 transition-colors min-w-[160px]">
                            <svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
                            </svg>
                            <div class="text-left">
                                <div class="text-xs opacity-80">Download on the</div>
                                <div class="text-lg font-semibold -mt-1">App Store</div>
                            </div>
                        </a>
                        <a href={androidAppLink} class="flex items-center bg-black text-white px-4 py-3 rounded-xl hover:bg-gray-800 transition-colors min-w-[160px]">
                            <svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
                            </svg>
                            <div class="text-left">
                                <div class="text-xs opacity-80">Get it on</div>
                                <div class="text-lg font-semibold -mt-1">Google Play</div>
                            </div>
                        </a>
                    </div>

                    <!-- Feature tags -->
                    <div class="flex flex-wrap items-center justify-center lg:justify-start gap-3">
                        <div class="flex items-center bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
                            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke-width="2"/>
                                <rect x="7" y="7" width="3" height="3" stroke-width="2"/>
                                <rect x="14" y="7" width="3" height="3" stroke-width="2"/>
                                <rect x="7" y="14" width="3" height="3" stroke-width="2"/>
                                <rect x="14" y="14" width="3" height="3" stroke-width="2"/>
                            </svg>
                            {t('cards_hero_tag_qr')}
                        </div>
                        <div class="flex items-center bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
                            {t('cards_hero_tag_balls')}
                        </div>
                        <div class="flex items-center bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
                            {t('cards_hero_tag_tap')}
                        </div>
                    </div>
                </div>

                <!-- Right column - App screenshots -->
                <div class="lg:w-1/2 relative">
                    <div class="relative w-full max-w-md mx-auto lg:max-w-none">
                        <img
                            src="/images/bingo-cards-app.png"
                            alt="Bingo Cards!! App Screenshot"
                            class="w-full h-auto max-w-[400px] mx-auto drop-shadow-2xl rounded-3xl"
                            loading="eager"
                        >
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Navigation -->
    <nav class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200 shadow-sm">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <button id="mobileMenuBtn" class="md:hidden flex items-center px-3 py-2 border rounded text-gray-500 border-gray-400 hover:text-[#417cee] hover:border-[#417cee]" aria-label={t('toggle_menu')} aria-expanded="false" aria-controls="mobileMenu">
                    <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/>
                    </svg>
                </button>

                <ul class="hidden md:flex flex-1 justify-center gap-8">
                    <li><a href="#features" class="nav-link text-gray-700 hover:text-[#417cee] font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-blue-50">{t('cards_nav_features')}</a></li>
                    <li><a href="#apps" class="nav-link text-gray-700 hover:text-[#417cee] font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-blue-50">{t('cards_nav_apps')}</a></li>
                    <li><a href="#usecases" class="nav-link text-gray-700 hover:text-[#417cee] font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-blue-50">{t('cards_nav_usecases')}</a></li>
                    <li><a href="#faq" class="nav-link text-gray-700 hover:text-[#417cee] font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-blue-50">{t('cards_nav_faq')}</a></li>
                </ul>
            </div>

            <div id="mobileMenu" class="hidden md:hidden">
                <ul class="flex flex-col space-y-2 pb-4">
                    <li><a href="#features" class="nav-link block text-gray-700 hover:text-[#417cee] font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-blue-50">{t('cards_nav_features')}</a></li>
                    <li><a href="#apps" class="nav-link block text-gray-700 hover:text-[#417cee] font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-blue-50">{t('cards_nav_apps')}</a></li>
                    <li><a href="#usecases" class="nav-link block text-gray-700 hover:text-[#417cee] font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-blue-50">{t('cards_nav_usecases')}</a></li>
                    <li><a href="#faq" class="nav-link block text-gray-700 hover:text-[#417cee] font-medium transition-colors duration-200 px-3 py-2 rounded-lg hover:bg-blue-50">{t('cards_nav_faq')}</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main id="main">
        <!-- Features Section -->
        <section id="features" class="py-20 bg-[#f9fafb]">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-[#101828] mb-4">{t('cards_features_title')}</h2>
                    <p class="text-xl text-[#4a5565] max-w-3xl mx-auto">{t('cards_features_subtitle')}</p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 max-w-6xl mx-auto">
                    {advantages.map((advantage) => (
                        <div class="bg-white rounded-2xl p-6 shadow-[0px_1px_3px_0px_rgba(0,0,0,0.1),0px_1px_2px_-1px_rgba(0,0,0,0.1)] hover:shadow-lg transition-shadow">
                            <div class="w-16 h-16 bg-gradient-to-br from-[#558ffd] to-[#2663db] rounded-xl flex items-center justify-center mb-5">
                                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24" set:html={advantage.icon} />
                            </div>
                            <h3 class="text-lg font-semibold text-[#101828] mb-3">{advantage.title}</h3>
                            <p class="text-[#4a5565] leading-relaxed">{advantage.desc}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Apps Family Section -->
        <AppsFamilySection lang={lang} />

        <!-- Use Cases Section -->
        <section id="usecases" class="py-20 bg-gradient-to-r from-[#558ffd] to-[#2663db]">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">{t('cards_usecases_title')}</h2>
                    <p class="text-xl text-[#f3e8ff] max-w-3xl mx-auto">{t('cards_usecases_subtitle')}</p>
                </div>

                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">
                    {useCases.map((useCase) => (
                        <div class="bg-white/10 rounded-2xl p-6 hover:bg-white/15 transition-colors">
                            <div class="w-14 h-14 bg-white/15 rounded-xl flex items-center justify-center mb-5">
                                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24" set:html={useCase.icon} />
                            </div>
                            <h3 class="text-xl font-bold text-white mb-3">{useCase.title}</h3>
                            <p class="text-[#f3e8ff] leading-relaxed">{useCase.desc}</p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- FAQ Section -->
        <section id="faq" class="py-20 bg-[#f9fafb]">
            <div class="container mx-auto px-4">
                <div class="text-center mb-16">
                    <h2 class="text-4xl md:text-5xl font-bold text-[#101828] mb-4">{t('cards_faq_title')}</h2>
                    <p class="text-xl text-[#4a5565] max-w-3xl mx-auto">{t('cards_faq_subtitle')}</p>
                </div>

                <div class="max-w-3xl mx-auto">
                    <div class="space-y-4">
                        {faqs.map((faq, index) => (
                            <div class="bg-white rounded-xl border border-gray-200 overflow-hidden">
                                <button class="faq-button w-full text-left p-5 hover:bg-gray-50 transition-colors focus:outline-none focus:ring-2 focus:ring-[#417cee] focus:ring-opacity-50" data-faq={index + 1} aria-expanded="false" aria-controls={`faq-content-${index + 1}`}>
                                    <div class="flex items-center justify-between">
                                        <h3 class="text-lg font-semibold text-[#101828] pr-4">{faq.q}</h3>
                                        <div class="faq-icon flex-shrink-0">
                                            <svg class="w-5 h-5 text-[#417cee] transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                                            </svg>
                                        </div>
                                    </div>
                                </button>
                                <div id={`faq-content-${index + 1}`} class="faq-content hidden px-5 pb-5">
                                    <p class="text-[#4a5565] leading-relaxed">{faq.a}</p>
                                </div>
                            </div>
                        ))}
                    </div>

                    <div class="text-center mt-12">
                        <p class="text-[#4a5565] mb-4">{t('cards_faq_contact')}</p>
                        <a href="mailto:support@wombat-apps.com" class="inline-flex items-center text-[#417cee] hover:text-[#2663db] font-semibold transition-colors">
                            {t('cards_faq_contact_link')}
                            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA Section -->
        <section class="py-20 bg-gradient-to-r from-[#558ffd] to-[#2663db] relative overflow-hidden">
            <!-- Decorative circles -->
            <div class="absolute inset-0 overflow-hidden">
                <div class="absolute top-[10%] right-[5%] w-16 h-16 bg-yellow-400 rounded-full opacity-80"></div>
                <div class="absolute top-[30%] right-[15%] w-10 h-10 bg-yellow-400 rounded-full opacity-60"></div>
