---
import LandingPageLayout from '../layouts/LandingPageLayout.astro';
import { toLanguage } from '../i18n/utils';
import { type Language } from '../i18n/ui';
import { apps } from '../config/apps';
import AppsFamilySection from './AppsFamilySection.astro';
import CtaSection from './CtaSection.astro';
import FaqSection from './FaqSection.astro';
import FeaturesSection from './FeaturesSection.astro';
import FooterSection from './FooterSection.astro';
import UseCasesSection from './UseCasesSection.astro';
import { getFaqs, getSeo, getHero, getNavigation, getUi } from '../content/helpers';
import type { FaqItem, HeroTag } from '../types';

interface Props {
  lang?: Language;
  enableAutoRedirect?: boolean;
}

const { lang = toLanguage(Astro.currentLocale), enableAutoRedirect = false } = Astro.props;
const appConfig = apps.cards;

// Load content from collections
const seo = await getSeo('cards', lang);
const hero = await getHero('cards', lang);
const navigation = await getNavigation('cards', lang);
const ui = await getUi(lang);
const faqData = await getFaqs('cards', lang);

if (!seo || !hero || !navigation || !ui) {
  throw new Error(`Missing content for cards landing page in ${lang}`);
}

const faqs: FaqItem[] = faqData?.items ?? [];
---

<LandingPageLayout
  app="cards"
  lang={lang}
  seo={seo}
  navigation={navigation}
  ui={ui}
  faqs={faqs}
  enableAutoRedirect={enableAutoRedirect}
>
  <Fragment slot="hero-content">
    <!-- Headline -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-black text-white mb-6 leading-tight">
      {hero.headline}
    </h1>

    <!-- Subtitle -->
    <p class="text-lg md:text-xl text-white/90 mb-6 leading-relaxed">
      {hero.subtitle}
    </p>

    <!-- Download buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 mb-6">
      <a href={appConfig.stores.ios} class="flex items-center bg-black text-white px-4 py-3 rounded-xl hover:bg-gray-800 transition-colors min-w-[160px]">
        <svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        <div class="text-left">
          <div class="text-xs opacity-80">{ui.buttons.downloadOnAppstore}</div>
          <div class="text-lg font-semibold -mt-1">App Store</div>
        </div>
      </a>
      <a href={appConfig.stores.android} class="flex items-center bg-black text-white px-4 py-3 rounded-xl hover:bg-gray-800 transition-colors min-w-[160px]">
        <svg class="w-8 h-8 mr-3" viewBox="0 0 24 24" fill="currentColor">
          <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.53,12.9 20.18,13.18L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
        </svg>
        <div class="text-left">
          <div class="text-xs opacity-80">{ui.buttons.getItOnGoogle}</div>
          <div class="text-lg font-semibold -mt-1">Google Play</div>
        </div>
      </a>
    </div>

    <!-- Feature tags -->
    {hero.tags && hero.tags.length > 0 && (
      <div class="flex flex-wrap items-center justify-center lg:justify-start gap-3">
        {hero.tags.map((tag: HeroTag, index: number) => (
          <div class="flex items-center bg-white/20 text-white px-4 py-2 rounded-full text-sm font-medium">
            {index === 0 && (
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2" stroke-width="2"/>
                <rect x="7" y="7" width="3" height="3" stroke-width="2"/>
                <rect x="14" y="7" width="3" height="3" stroke-width="2"/>
                <rect x="7" y="14" width="3" height="3" stroke-width="2"/>
                <rect x="14" y="14" width="3" height="3" stroke-width="2"/>
              </svg>
            )}
            {tag.label}
          </div>
        ))}
      </div>
    )}
  </Fragment>

  <!-- Main content sections -->
  <FeaturesSection app="cards" lang={lang} gradientFrom={appConfig.colors.gradientFrom} gradientTo={appConfig.colors.gradientTo} />
  <AppsFamilySection lang={lang} />
  <UseCasesSection app="cards" lang={lang} gradientFrom={appConfig.colors.gradientFrom} gradientTo={appConfig.colors.gradientTo} />
  <FaqSection app="cards" lang={lang} />
  <CtaSection
    app="cards"
    lang={lang}
    gradientFrom={appConfig.colors.gradientFrom}
    gradientTo={appConfig.colors.gradientTo}
    iosLink={appConfig.stores.ios}
    androidLink={appConfig.stores.android}
  />
  <FooterSection app="cards" lang={lang} />
</LandingPageLayout>
