                        <img src="/images/bingo-cards-logo.png" alt="Bingo Cards!!" class="h-8 w-auto">
                    </div>
                    <div class="flex flex-wrap justify-center md:justify-start gap-4 text-sm text-gray-400">
                        <a href={privacyPath} class="hover:text-white transition-colors">{t('privacy_policy_title')}</a>
                        <span>|</span>
                        <a href={mainLandingPath} class="hover:text-white transition-colors">{t('cards_view_all_apps')}</a>
                    </div>
                </div>

                <!-- Language selector -->
                <div class="flex gap-2">
                    {Object.entries(languages).map(([code]) => (
                        <a
                            href={getLanguageLink(code as Language)}
                            class={`language-link px-4 py-2 rounded-lg font-medium transition-colors ${code === lang ? 'bg-[#417cee] text-white' : 'bg-gray-700 text-gray-300 hover:bg-gray-600 hover:text-white'}`}
                            aria-current={code === lang ? 'page' : undefined}
                            data-lang={code}
                        >
                            {code.toUpperCase()}
                        </a>
                    ))}
                </div>
            </div>

            <div class="mt-8 pt-8 border-t border-gray-700 text-center text-gray-400 text-sm">
                <p>{t('footer_rights')}</p>
